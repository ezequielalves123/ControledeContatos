@model ContatoModel
@{
    ViewData["Title"] = "Novo Contato";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-4 border-0">
                    <h2 class="mb-0 fw-bold"><i class="bi bi-person-plus-fill me-2"></i>Cadastrar Contato</h2>
                    <p class="small mb-0 opacity-75">Preencha as informações abaixo para salvar</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-controller="Contato" asp-action="Criar" method="post">

                        <div class="mb-4">
                            <label asp-for="nome" class="form-label fw-semibold text-secondary">Nome Completo</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="nome" class="form-control border-start-0 bg-light" placeholder="Ex: João Silva">
                                @Html.ValidationMessageFor(x => x.nome)
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="email" class="form-label fw-semibold text-secondary">E-mail</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                                <input type="email" asp-for="email" class="form-control border-start-0 bg-light" placeholder="joao@email.com">
                                @Html.ValidationMessageFor(x => x.email)
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="celular" class="form-label fw-semibold text-secondary">Celular</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-whatsapp"></i></span>
                                <input type="text" asp-for="celular" class="form-control border-start-0 bg-light" placeholder="(00) 00000-0000">
                                @Html.ValidationMessageFor(x => x.celular)
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i>Salvar Contato
                            </button>
                            <a class="btn btn-outline-secondary btn-sm rounded-pill border-0" asp-controller="Contato" asp-action="Index">
                                <i class="bi bi-arrow-left me-1"></i>Voltar para a listagem
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Pequeno ajuste para o foco dos inputs ficarem mais bonitos */
    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
        background-color: #fff !important;
    }

    .input-group-text {
        color: #6c757d;
    }

    body {
        background-color: #f8f9fa; /* Um cinza bem claro para destacar o card branco */
    }
</style>