@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Listagem de Contatos</h2>
            <p class="text-muted small">Gerencie seus contatos cadastrados no sistema</p>
        </div>
        <a class="btn btn-primary rounded-pill px-4 shadow-sm" role="button" asp-controller="Contato" asp-action="Criar">
            <i class="bi bi-person-plus-fill me-2"></i>Novo Contato
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="ps-4 py-3 text-secondary text-uppercase small fw-bold">ID</th>
                            <th scope="col" class="py-3 text-secondary text-uppercase small fw-bold">Nome</th>
                            <th scope="col" class="py-3 text-secondary text-uppercase small fw-bold">E-mail</th>
                            <th scope="col" class="py-3 text-secondary text-uppercase small fw-bold">Celular</th>
                            <th scope="col" class="py-3 text-center text-secondary text-uppercase small fw-bold">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (ContatoModel contato in Model)
                            {
                                <tr class="align-middle">
                                    <td class="ps-4 fw-bold text-secondary">@contato.id</td>
                                    <td class="fw-semibold text-dark">@contato.nome</td>
                                    <td>
                                        <span class="text-muted"><i class="bi bi-envelope me-2"></i>@contato.email</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border fw-normal">
                                            <i class="bi bi-phone me-1 text-primary"></i>@contato.celular
                                        </span>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group shadow-sm rounded">
                                            <a role="button" class="btn btn-sm btn-outline-primary" asp-route-id="@contato.id" asp-controller="Contato" asp-action="Editar" title="Editar">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                            <a role="button" class="btn btn-sm btn-outline-danger" asp-route-id="@contato.id" asp-controller="Contato" asp-action="ApagarConfirmacao" title="Excluir">
                                                <i class="bi bi-trash3-fill"></i> Apagar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-people shadow-sm p-3 rounded-circle d-inline-block mb-3" style="font-size: 2rem; background-color: #f8f9fa;"></i>
                                        <p class="mb-0">Nenhum contato encontrado no banco de dados.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table thead th {
        border-bottom: 1px solid #edf2f7;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
        transform: scale(1.002);
    }

    .btn-group .btn {
        padding: 0.4rem 0.8rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.8em;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">